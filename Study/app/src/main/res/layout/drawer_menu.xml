<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/portrait"
            android:layout_width="@dimen/size_90dp"
            android:layout_height="@dimen/size_90dp"
            android:layout_gravity="left|top"
            android:scaleType="centerInside" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="王诚宇"
            android:textSize="@dimen/textSize_14sp" />


    </LinearLayout>

    <include
        android:id="@+id/drawer_menu_music"
        layout="@layout/default_item" />

    <include
        android:id="@+id/drawer_menu_movie"
        layout="@layout/default_item" />

    <include
        android:id="@+id/drawer_menu_novel"
        layout="@layout/default_item" />

    <include
        android:id="@+id/drawer_menu_art"
        layout="@layout/default_item" />

</LinearLayout>